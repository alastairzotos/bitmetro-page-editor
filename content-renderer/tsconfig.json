{
	"exclude": [
		"dist",
		"node_modules"
	],
	"include": [
		"src"
	],
	"compilerOptions": {
		"moduleResolution": "node",
		"lib": ["ESNext", "DOM"],
		"target": "es5",
		"sourceMap": true,
		"jsx": "react",
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"declaration": true
	}
}